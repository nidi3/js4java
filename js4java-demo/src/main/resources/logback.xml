<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender name="A" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%-4r [%t] %-5p %c - %m%n</pattern>
        </encoder>
    </appender>

    <logger name="org.springframework" level="WARN"/>

    <root level="DEBUG">
        <appender-ref ref="A"/>
    </root>
</configuration>